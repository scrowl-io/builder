{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "module": "CommonJS",
    "target": "ESNext",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "stripInternal": true
  },
  "include": [
    "./dev/src/**/*.ts",
    "./dev/src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./types/*.d.ts"
  ],
  "exclude": ["./dist", "./node_modules"]
}
